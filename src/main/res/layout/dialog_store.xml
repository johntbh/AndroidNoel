<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="NomBoutique"
        android:layout_width="wrap_content"
        android:id="@+id/tvNom"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="70dp"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/tvSapins"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/tvHoraires"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/tvSapins"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:text="test" />

    <TextView
        android:text="Sapins dispo :"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/textView10"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/tvNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pour y aller ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/tv11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Horaires :"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:id="@+id/tv11"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>